<Application x:Class="WPFCalculatorWithClasses.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WPFCalculatorWithClasses"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="BasicButtonStyle" TargetType="Button">
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="#FFC8DCF3"/>
            <Setter Property="BorderBrush" Value="#FF9498B0"/>
        </Style>
    </Application.Resources>
</Application>
